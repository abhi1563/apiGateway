version: "3.8"

services:
  nginx-gateway:
    image: nginx:latest
    container_name: nginx-gateway
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - user-service
      - order-service
    networks:
      - gateway_net

  user-service:
    image: hashicorp/http-echo
    container_name: user-service
    command: ["-text=User service OK"]
    networks:
      - gateway_net

  order-service:
    image: hashicorp/http-echo
    container_name: order-service
    command: ["-text=Order service OK"]
    networks:
      - gateway_net

networks:
  gateway_net:
    driver: bridge
